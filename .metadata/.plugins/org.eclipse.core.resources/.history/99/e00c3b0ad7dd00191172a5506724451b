package emmanuel_Ajayi_exercise1;

import java.util.Scanner;

public class kjbkhvgcg {

	public static void main(String[] args) {
		String[] multiChoice1;
		int score = 0;
	    Scanner input = new Scanner(System.in);

	    multiChoice1 = new String[5];
	    multiChoice1[0] = "1. Information is passed to a method in?";
	    multiChoice1[1] = "2. A well designed method?";
