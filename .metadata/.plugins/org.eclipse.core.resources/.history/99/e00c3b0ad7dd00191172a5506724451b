	        System.out.println("C. The methods body");
	        System.out.println("D.The arguments to the method");
	        System.out.println();
	        System.out.print("Your answer: ");
	        String uSelect1 = input.next();

	        switch (uSelect1.toUpperCase()){
	            case "A":
	                System.out.println("Incorrect!\n\n");
	                break;
	            case "B":
	            	System.out.println("Incorrect!\n\n");
	                break;
	            case "C":
	                System.out.println("Incorrect!\n\n");
	                break;
	            case "D":
	            	 System.out.println("Correct!\n\n");
		                //scorePro++;
		                score++;
	            default: 
	                uSelect1 = "Incorrect, choice.\n\n";
	                break;
	        }
	        System.out.printf("Your total score is  %d%n ", score);
	    }
	    //
	    if(userSelect2==multiChoice1[1]){
	        System.out.println(multiChoice1[0]);
	        System.out.println("A. The method name");
	        System.out.println("B. Thats's methods return");
